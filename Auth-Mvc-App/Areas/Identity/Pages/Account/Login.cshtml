@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>

</style>
<div class="row">
    <div class="left">
        <img src="~/lib/images/360_f_305434309_0mgfzzm1rvstoymlorxw4d5dvmke2rrs.jpg" class="signup-img" />
@*        <img src="~/lib/images/woman-shopping-online.gif" class="gif"/>
*@        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/lib/images/shopit logo.png" class="brand" /></a>
        <div class="text-item">
            <h2>Welcome back!</h2>
            <p style="font-size: 18px">Log in to access your account and view your <br />order history.</p>
        </div>
    </div>
    <div class="col-md-4 centered-container">
        <section class="form-box">
            <form id="account" method="post">
                <h2 class="title">@ViewData["Title"]</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <i class="fa-regular fa-envelope icon"></i>
                    <label asp-for="Input.Email" class="control-label">Email</label>
                    <input asp-for="Input.Email" class="formInput" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-lock icon"></i>
                    <label asp-for="Input.Password" class="control-label">Password</label>
                    <input asp-for="Input.Password" class="formInput" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Login</button>
                </div>
                <div>
                    <p>
                        <a class="forget" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="nav-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Sign Up</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
